<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- === PROPERTIES === -->
    <property name="LOG_PATH" value="logs"/>

    <!-- === APPENDER: Console (Dev) with color === -->
    <appender name="CONSOLE_DEV" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>%d{HH:mm:ss.SSS} | %highlight([%level]) - %cyan(%X{requestId}) - %msg%n</pattern>
      </encoder>
    </appender>

    <!-- === APPENDER: Console (Prod) JSON format === -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <logLevel />
                <message />
                <mdc />
                <timestamp><fieldName>@timestamp</fieldName></timestamp>
                <arguments />
                <threadName />
                <loggerName />
                <stackTrace />
            </providers>
        </encoder>
    </appender>

    <!-- === APPENDER: JSON file log for all profiles === -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application-log.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application-log-%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <logLevel />
                <message />
                <timestamp><fieldName>@timestamp</fieldName></timestamp>
                <arguments />
                <threadName />
                <loggerName />
                <stackTrace />
                <mdc />
            </providers>
        </encoder>
    </appender>

    <!-- === DEV PROFILE === -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE_DEV"/>
            <appender-ref ref="JSON_FILE"/>
        </root>
        <logger name="com.jooqspring" level="DEBUG"/>
    </springProfile>

    <!-- === PROD PROFILE === -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="JSON_FILE"/>
        </root>
        <logger name="com.jooqspring" level="INFO"/>
    </springProfile>

</configuration>
